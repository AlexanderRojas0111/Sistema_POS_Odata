{
  "dashboard": {
    "id": null,
    "title": "Sistema POS Odata - Overview",
    "tags": ["pos", "overview", "production"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Estado General del Sistema",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"flask_app\"}",
            "legendFormat": "Backend Flask"
          },
          {
            "expr": "up{job=\"postgres\"}",
            "legendFormat": "Base de Datos"
          },
          {
            "expr": "up{job=\"redis\"}",
            "legendFormat": "Redis Cache"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Requests por Segundo",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"flask_app\"}[5m])",
            "legendFormat": "RPS"
          }
        ],
        "yAxes": [
          {"label": "Requests/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Latencia de Respuesta",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"flask_app\"}[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"flask_app\"}[5m]))",
            "legendFormat": "P50"
          }
        ],
        "yAxes": [
          {"label": "Segundos", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "CÃ³digos de Estado HTTP",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"flask_app\", status=~\"2..\"}[5m])",
            "legendFormat": "2xx - Success"
          },
          {
            "expr": "rate(http_requests_total{job=\"flask_app\", status=~\"4..\"}[5m])",
            "legendFormat": "4xx - Client Error"
          },
          {
            "expr": "rate(http_requests_total{job=\"flask_app\", status=~\"5..\"}[5m])",
            "legendFormat": "5xx - Server Error"
          }
        ],
        "yAxes": [
          {"label": "Requests/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Uso de CPU",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          }
        ],
        "yAxes": [
          {"label": "Porcentaje", "min": 0, "max": 100}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Uso de Memoria",
        "type": "graph",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage %"
          }
        ],
        "yAxes": [
          {"label": "Porcentaje", "min": 0, "max": 100}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Conexiones de Base de Datos",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections"
          }
        ],
        "yAxes": [
          {"label": "Conexiones", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Operaciones Redis",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "Commands/sec"
          }
        ],
        "yAxes": [
          {"label": "Commands/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
