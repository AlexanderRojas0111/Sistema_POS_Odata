{
  "dashboard": {
    "id": null,
    "title": "Sistema POS Odata - Métricas de Negocio",
    "tags": ["pos", "business", "sales", "inventory"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Ventas del Día",
        "type": "stat",
        "targets": [
          {
            "expr": "pos_sales_total{period=\"daily\"}",
            "legendFormat": "Ventas Hoy"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 100}
              ]
            },
            "unit": "currencyMXN"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Transacciones del Día",
        "type": "stat",
        "targets": [
          {
            "expr": "pos_transactions_total{period=\"daily\"}",
            "legendFormat": "Transacciones"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 20},
                {"color": "green", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Ticket Promedio",
        "type": "stat",
        "targets": [
          {
            "expr": "pos_average_ticket{period=\"daily\"}",
            "legendFormat": "Ticket Promedio"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyMXN",
            "color": {"mode": "palette"}
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Productos con Stock Bajo",
        "type": "stat",
        "targets": [
          {
            "expr": "pos_low_stock_products",
            "legendFormat": "Productos Críticos"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Ventas por Hora",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pos_sales_total{period=\"hourly\"}[1h])",
            "legendFormat": "Ventas/Hora"
          }
        ],
        "yAxes": [
          {"label": "Ventas por Hora", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Productos Más Vendidos",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, pos_product_sales_total)",
            "legendFormat": "Producto - Ventas"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"__name__": true, "Time": true},
              "indexByName": {},
              "renameByName": {
                "instance": "Instancia",
                "job": "Job",
                "product": "Producto",
                "value": "Ventas"
              }
            }
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Evolución de Ventas (7 días)",
        "type": "graph",
        "targets": [
          {
            "expr": "pos_sales_total{period=\"daily\"}",
            "legendFormat": "Ventas Diarias"
          }
        ],
        "yAxes": [
          {"label": "Ventas (MXN)", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "Estado del Inventario",
        "type": "piechart",
        "targets": [
          {
            "expr": "pos_inventory_status",
            "legendFormat": "{{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette"}
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 9,
        "title": "Usuarios Activos",
        "type": "stat",
        "targets": [
          {
            "expr": "pos_active_users",
            "legendFormat": "Usuarios Conectados"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 3},
                {"color": "green", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 24}
      },
      {
        "id": 10,
        "title": "Tiempo de Respuesta Promedio",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"flask_app\"}[5m]))",
            "legendFormat": "Latencia P50"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 24}
      },
      {
        "id": 11,
        "title": "Errores del Sistema",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"flask_app\", status=~\"5..\"}[5m])",
            "legendFormat": "Errores 5xx/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 24}
      },
      {
        "id": 12,
        "title": "Uso de Cache Redis",
        "type": "stat",
        "targets": [
          {
            "expr": "redis_memory_used_bytes / redis_memory_max_bytes * 100",
            "legendFormat": "Uso de Memoria %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 24}
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "1m"
  }
}
