[flake8]
# Estilo de línea compatible con el formateador de código "black"
max-line-length = 88
extend-ignore = E203, W503

# E203: Espacio en blanco antes de ':' (conflicto con black)
# W503: Salto de línea antes de operador binario (conflicto con black)

# Excluir directorios que no necesitan ser analizados
exclude =
    .git,
    __pycache__,
    venv,
    build,
    dist