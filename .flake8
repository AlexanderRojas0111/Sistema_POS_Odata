[flake8]
max-line-length = 127
max-complexity = 10
ignore = E203,E501,W503,F401,F403,F405,E722,E731,W291,W293,W391,E741,E742,E743,E901,E902,E999,F811,F812,F821,F822,F823,F831,F841
exclude = 
    .git,
    __pycache__,
    .venv,
    .venv_new,
    venv,
    env,
    .env,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    migrations,
    node_modules,
    frontend/build,
    frontend/node_modules
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F403,F405
    app/__init__.py:F401 