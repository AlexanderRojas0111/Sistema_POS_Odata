# ==============================================
# CONFIGURACIÓN DE PRODUCCIÓN (EJEMPLO - NO USAR SECRETOS)
# Sistema POS O'Data v2.0.0
# ==============================================

# ===== APLICACIÓN PRINCIPAL =====
FLASK_ENV=production
SECRET_KEY=replace-with-32char-random
JWT_SECRET_KEY=replace-with-32char-random
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# ===== BASE DE DATOS (PostgreSQL) =====
DATABASE_URL=postgresql://pos_user:replace-with-strong-password@pos-postgres-production:5432/pos_odata
POSTGRES_DB=pos_odata
POSTGRES_USER=pos_user
POSTGRES_PASSWORD=replace-with-strong-password

# ===== REDIS CACHE =====
REDIS_PASSWORD=replace-with-strong-password
REDIS_URL=redis://:${REDIS_PASSWORD}@pos-redis-production:6379/0
RATELIMIT_STORAGE_URL=redis://:${REDIS_PASSWORD}@pos-redis-production:6379/1

# ===== MONITOREO =====
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=replace-with-strong-password
PROMETHEUS_RETENTION_TIME=30d

# ===== ALERTAS =====
ALERT_EMAIL=admin@sabrositas.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@sabrositas.com
SMTP_PASSWORD=replace-with-smtp-password

# ===== EMPRESA =====
COMPANY_NAME="Las Arepas Cuadradas - Sabrositas"
COMPANY_EMAIL=info@sabrositas.com
COMPANY_PHONE="+57 300 123 4567"

# ===== INTEGRACIONES =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@sabrositas.com
EMAIL_PASSWORD=replace-with-app-password
EMAIL_USE_TLS=true

# ===== BACKUP =====
BACKUP_RETENTION_DAYS=30
BACKUP_MAX_FILES=50
BACKUP_DIR=/backups

# ===== SEGURIDAD =====
DEBUG=false
TESTING=false
DEVELOPMENT_MODE=false

