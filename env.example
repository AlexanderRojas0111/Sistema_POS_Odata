# Sistema POS Odata - Variables de Entorno de Ejemplo
# Copiar este archivo a .env y configurar con valores reales

# =============================================================================
# CONFIGURACIÓN DE FLASK
# =============================================================================
FLASK_APP=app.main:app
FLASK_ENV=production
FLASK_DEBUG=0
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================
# PostgreSQL - Formato: postgresql://usuario:contraseña@host:puerto/nombre_db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pos_odata_prod

# Configuración adicional de base de datos
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# CONFIGURACIÓN DE REDIS
# =============================================================================
# Redis - Formato: redis://host:puerto/db
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================
# Claves secretas - GENERAR NUEVAS PARA PRODUCCIÓN
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# Configuración de CORS
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry para monitoreo de errores (opcional)
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

# =============================================================================
# CONFIGURACIÓN DE AI/ML
# =============================================================================
# Hugging Face
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
HUGGINGFACE_CACHE_DIR=./models

# LangChain
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=pos-odata-system

# =============================================================================
# CONFIGURACIÓN DE EMAIL
# =============================================================================
# SMTP para notificaciones
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# =============================================================================
# CONFIGURACIÓN DE ARCHIVOS
# =============================================================================
# Directorio de uploads
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Directorio de logs
LOG_FOLDER=./logs

# Directorio de backups
BACKUP_FOLDER=./backups

# =============================================================================
# CONFIGURACIÓN DE CACHE
# =============================================================================
# Tiempo de expiración del cache (en segundos)
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=pos_odata_
CACHE_TYPE=redis

# =============================================================================
# CONFIGURACIÓN DE SESIONES
# =============================================================================
# Configuración de sesiones
SESSION_TYPE=redis
SESSION_KEY_PREFIX=session:
SESSION_LIFETIME=3600

# =============================================================================
# CONFIGURACIÓN DE RATE LIMITING
# =============================================================================
# Límites de tasa para API
RATELIMIT_DEFAULT=100/hour
RATELIMIT_STORAGE_URL=redis://localhost:6379/0

# =============================================================================
# CONFIGURACIÓN DE CELERY
# =============================================================================
# Celery para tareas en segundo plano
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True

# =============================================================================
# CONFIGURACIÓN DE FRONTEND
# =============================================================================
# URL del frontend
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000/api/v1

# =============================================================================
# CONFIGURACIÓN DE DOMINIO
# =============================================================================
# Dominio principal
DOMAIN_NAME=yourdomain.com
SITE_URL=https://yourdomain.com

# =============================================================================
# CONFIGURACIÓN DE SSL
# =============================================================================
# Certbot para SSL automático
CERTBOT_EMAIL=admin@yourdomain.com
CERTBOT_DOMAIN=yourdomain.com

# =============================================================================
# CONFIGURACIÓN DE GRAFANA
# =============================================================================
# Grafana para visualización
GRAFANA_URL=https://grafana.yourdomain.com
GRAFANA_PASSWORD=your_grafana_password_here

# =============================================================================
# CONFIGURACIÓN DE BACKUP
# =============================================================================
# Configuración de respaldos automáticos
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Diario a las 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true

# =============================================================================
# CONFIGURACIÓN DE ALERTAS
# =============================================================================
# Alertas del sistema
ALERTS_ENABLED=true
ALERTS_EMAIL=admin@yourdomain.com

# =============================================================================
# INSTRUCCIONES DE USO
# =============================================================================
# 1. Copiar este archivo a .env
# 2. Configurar todas las variables con valores reales
# 3. NUNCA commitear .env a Git
# 4. Para producción, usar claves secretas fuertes y únicas
# 5. Verificar que todas las URLs y credenciales sean correctas
# 6. Probar la configuración antes de desplegar en producción

