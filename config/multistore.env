# Configuración Multi-Sede Sabrositas POS
# ========================================
# Variables de entorno para arquitectura multi-tienda

# === BASE DE DATOS MYSQL ===
DATABASE_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sabrositas_pos_multistore
DB_USER=sabrositas_user
DB_PASSWORD=sabrositas_pass_123
MYSQL_ROOT_PASSWORD=sabrositas_root_123

# === REDIS CACHE ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=sabrositas_redis_123
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# === APLICACIÓN ===
FLASK_ENV=production
SECRET_KEY=sabrositas_secret_key_multistore_123
JWT_SECRET_KEY=sabrositas_jwt_secret_multistore_123
HOST=0.0.0.0
PORT=8000

# === CONFIGURACIÓN MULTI-SEDE ===
MULTISTORE_ENABLED=true
SYNC_FREQUENCY_MINUTES=15
MAX_STORES=100
DEFAULT_TIMEZONE=America/Bogota
DEFAULT_CURRENCY=COP
DEFAULT_TAX_RATE=0.19

# === MONITOREO ===
GRAFANA_PASSWORD=sabrositas_grafana_123
PROMETHEUS_RETENTION=30d

# === SEGURIDAD ===
RATE_LIMIT_DEFAULT=1000 per hour
SESSION_TIMEOUT_MINUTES=480
PASSWORD_MIN_LENGTH=8
ENABLE_2FA=false

# === BACKUP ===
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_RETENTION_DAYS=30

# === NOTIFICACIONES ===
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

WHATSAPP_ENABLED=false
WHATSAPP_API_KEY=
WHATSAPP_PHONE_ID=

# === INTEGRACIÓN ===
API_RATE_LIMIT=10000 per hour
WEBHOOK_SECRET=sabrositas_webhook_secret_123
EXTERNAL_API_TIMEOUT=30

# === DESARROLLO ===
DEBUG=false
TESTING=false
DEVELOPMENT_MODE=false
